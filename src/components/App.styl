@import url('https://fonts.googleapis.com/css?family=Dosis|Open+Sans+Condensed:300')

.app-cmpt
  color: green
  font-family: 'Open Sans Condensed', sans-serif
  font-size: 30px

.chat-display
  background-color: #b3d9ff
  border-radius: 10px
  height:600px
  width:75%

.chat-area
  background-color:red
  position: relative
  top:5px
  width:75%

.msg-user
  display: inline
  font-size: 12pt
  font-style: bold
  color: black

.msg-time 
  display: inline
  font-size: 10pt
  font-style: italic
  color: #595959

.msg-content
  display: inline
  font-size: 12pt
  color: black