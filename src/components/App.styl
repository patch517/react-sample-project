@import url('https://fonts.googleapis.com/css?family=Dosis|Open+Sans+Condensed:300|Nunito')

html
  height: 100%
  width: 100%
  overflow: hidden

body
  margin: 0
  height: 100%
  width: 100%
  background-color: #121212
  background-image: url('/bg_img.jpg')
  background-size: 100%
  background-position: center
  background-repeat: no-repeat
  background-attachment: fixed

.app-cmpt
  color: green
  font-family: 'Open Sans Condensed', sans-serif
  font-size: 30px

.chat-display
  position: relative
  background-color: rgba(0,0,0,.7)
  border-radius: 10px 10px 0px 0px
  top: 80px
  margin: auto
  margin-bottom: 0
  height: 600px
  width: 60%
  overflow-y: auto
  overflow-x: hidden
  word-wrap: break-word

.chat-area
  background-color: rgba(0,0,0,.8)
  position:relative
  top: 80px
  border-radius: 0px 0px 10px 10px
  position: relative
  margin: auto
  margin-top: 0
  width:60%

.msg-parent
  font-family: 'Nunito', sans-serif;
  padding-left: 5px

.msg-time 
  display: inline-block
  min-width: 60px
  font-size: 8pt
  font-style: italic
  text-align: center
  color: #cccccc

.msg-user
  display: inline
  padding-left: 8px
  font-size: 12pt
  font-weight: bold
  color: #ffffff

.msg-content
  display: inline-block
  vertical-align: text-top
  padding-top: 14.3px
  padding-left: 8px
  font-size: 12pt
  width:75%
  color: #ffffff
  word-wrap: break-word

.user-loginWrapper
  position:absolute
  height:100%
  width:100%

.user-login
  position: relative
  border-radius: 20px
  width: 500px
  height: 240px
  margin: auto
  top: 20%
  background-color: rgba(80,80,80,.5)

.user-login_txtField
  position: relative
  top: 100px
  margin: 0 auto
  left: 150px